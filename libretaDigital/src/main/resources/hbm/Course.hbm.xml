<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
 	
	<class name="com.libretaDigital.entities.Course" table="course">
	
		<id column="oid" name="oid" type="long" unsaved-value="null">
			<generator class="native" />
		</id>
		
		<property name="name" length="100" />
		
		<list name="groupsList" table="group_" fetch="join" cascade="all,delete-orphan">
			<key column="course_id" />
			<list-index column="index_groups" />
			<one-to-many class="com.libretaDigital.entities.Group" />
		</list>
		
		<list name="subjectsList" table="subject" fetch="join" cascade="all,delete-orphan">
			<key column="course_id" />
			<list-index column="index_subjects" />
			<one-to-many class="com.libretaDigital.entities.Subject" />
		</list>
		
	</class>
</hibernate-mapping>